# .env

# ============================================
# HEDERA NETWORK CONFIGURATION
# ============================================

# Network selection (testnet, mainnet, previewnet)
HEDERA_NETWORK=testnet

# ============================================
# OPERATOR ACCOUNT (Required)
# ============================================

# Your testnet account ID (format: 0.0.xxxxx)
OPERATOR_ID=0.0.1234567

# Your account's private key (ED25519 or ECDSA)
OPERATOR_KEY=302e020100300506032b65700422042012a4a4add3d885bd61d7ce5cff88c5ef2d510651add00a7f64cb90de3359bc5e

# ============================================
# TESTING (Optional)
# ============================================

# Test wallet account ID for NFT transfer testing
# TEST_WALLET_ID=0.0.1234568

# ============================================
# MIRROR NODE CONFIGURATION
# ============================================

# Testnet mirror node (gRPC)
MIRROR_NODE_ADDRESS=hcs.testnet.mirrornode.hedera.com:5600

# Testnet mirror REST API
MIRROR_NODE_REST_API=https://testnet.mirrornode.hedera.com

# ============================================
# JSON-RPC RELAY (For EVM/Ethers.js)
# ============================================

# Hashio public JSON-RPC endpoint
JSON_RPC_RELAY_URL=https://testnet.hashio.io/api

# Chain ID for testnet
CHAIN_ID=296

# ============================================
# TRANSACTION SETTINGS
# ============================================

# Maximum transaction fee in HBAR
MAX_TRANSACTION_FEE=2

# Maximum query payment in HBAR
MAX_QUERY_PAYMENT=1

# Transaction timeout in milliseconds
REQUEST_TIMEOUT=60000

# ============================================
# TOKEN CONFIGURATION (Fractional Ownership)
# ============================================

# Default token supply for new properties
DEFAULT_TOKEN_SUPPLY=10000

# Token decimals (0 for whole shares, 2 for fractional)
TOKEN_DECIMALS=0

# ============================================
# IPFS CONFIGURATION (Document Storage)
# ============================================

# IPFS provider (using Pinata)
IPFS_PROVIDER=pinata

# Pinata JWT Token (REQUIRED for IPFS uploads)
# Get your JWT from: https://app.pinata.cloud/developers/api-keys
# Click "New Key" -> Enable "pinFileToIPFS" and "pinJSONToIPFS" -> Create Key
# Copy the JWT (not API Key/Secret)
PINATA_JWT=your_pinata_jwt_here

# IPFS Gateway for reading files
IPFS_GATEWAY=https://gateway.pinata.cloud/ipfs/

# ============================================
# AI/ANALYTICS CONFIGURATION (Future)
# ============================================

# AI valuation model endpoint (TBD)
# AI_VALUATION_API_URL=

# Enable AI features
ENABLE_AI_FEATURES=false

# ============================================
# COMPLIANCE & KYC (Future)
# ============================================

# KYC Provider API endpoint
# KYC_API_URL=
# KYC_API_KEY=

# Licensing API for document verification
# LICENSING_API_URL=
# LICENSING_API_KEY=