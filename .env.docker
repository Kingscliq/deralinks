# ============================================
# Docker Compose Environment Variables
# ============================================

# Database
DB_USER=deralinks
DB_PASSWORD=deralinks_dev_password
DB_NAME=deralinks_db
DB_PORT=5432

# Redis
REDIS_PORT=6379

# Backend API
API_PORT=3600

# pgAdmin (optional - for development)
PGADMIN_EMAIL=admin@deralinks.com
PGADMIN_PASSWORD=admin
PGADMIN_PORT=5050

# Hedera (from your main .env)
OPERATOR_ID=0.0.7125108
OPERATOR_KEY=your_operator_key_here
HEDERA_NETWORK=testnet

# IPFS/Pinata
PINATA_API_KEY=your_pinata_api_key
PINATA_SECRET_KEY=your_pinata_secret_key

# JWT
JWT_SECRET=dev_secret_change_in_production
JWT_EXPIRES_IN=7d

# CORS
CORS_ORIGIN=http://localhost:3000
